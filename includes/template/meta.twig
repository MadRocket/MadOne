<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>
    {%- block site_title -%}
        {%- if _page.meta_title -%}
            {{ _page.meta_title }}
        {%- else -%}
            {{ _page.title }} &mdash; {{ madone['config'].site_title }}
        {%- endif -%}
    {%- endblock -%}
</title>
{%- if _page.meta_keywords %}
<meta name="keywords" content="{{_page.meta_keywords}}">
{%- endif -%}
{%- if _page.meta_description %}
<meta name="description" content="{{_page.meta_description}}">
{%- endif -%}
