<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
	"http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    {% include "meta.twig" %}

    <link rel="stylesheet" href="/static/css/style.css" type="text/css" />
    <link rel="stylesheet" href="/media/jquery.fancybox-1.3.1/jquery.fancybox-1.3.1.css">
    <!--[if IE 6]>
    <link rel="stylesheet" href="/static/css/ie6.css" type="text/css" />
    <![endif]-->
</head>
<body>
<div id="container">
    <div id="logo-container">
        <h1>Ваш сайт</h1>
    </div>
    <div id="top-navigation">
        <ul class="sf-menu">
        {% for item in madone.getTree('Model_Page').filterLevel(2, 0).filter({'enabled': 1, 'menu': 1}).kiOrder().tree() %}
            <li{{ item.uri == _page.uri ? ' class="current"' : '' }}><a href="{{ item.uri }}">{{ item.title|e }}</a></li>
        {% endfor %}
        </ul>
    </div>

    <div id="side-navigation">
    </div>

    {% block content %}
        {{ _page.text|raw }}
    {% endblock %}

    {% include "footer.twig" %}
</div>
<script type="text/javascript" src="http://yandex.st/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="/media/jquery.fancybox-1.3.1/jquery.fancybox-1.3.1.js"></script>
<script type="text/javascript">
$( function() {
	$( 'a[rel=lightbox]' ).fancybox();
});
</script>
</body>
</html>